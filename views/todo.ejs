<!DOCTYPE html>

<head>
    <title>Todo App</title>
    <link rel="stylesheet" href="../public/stylesheets/todo.css" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body style="background-color: orange;font-size: 27px;" >
    <div class="todo-container" style="padding: 100px; width: 800px;margin-left:300px ;">
        <h2>To-Do List</h2>
        <div class="todo">

            <form action="/" method="POST" class="todo-header">
                <input type="text" name="content" style="width: 400px;height: 50px;font-size: 22px;">
                <button type="submit" style="width: 40px;height: 40px;"><span class="fas fa-plus"></span></button>
            </form>

<ul class="todo-list">
    <% todoTasks.forEach(details=> { %>
        <li class="todo-list-item" >
            <div class="todo-list-item-name" style="display: inline;margin-bottom: 20px;">
               <h2  style="display: inline;margin-right: 30px;"><%= details.content %></h2> 
            </div>
            <a href="/edit/<%= details._id %>" class="edit">
                <span class="fas fa-edit"></span>
            </a>
            <a href="/remove/<%= details._id %>" class="remove">
                <span class="fas fa-times"></span>
            </a>
        </li>

    <% }) %>
</ul>


        </div>
    </div>
</body>